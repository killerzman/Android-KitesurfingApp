<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <include
        android:id="@+id/app_bar_details"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/app_bar" />

    <TextView
        android:id="@+id/countryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/country"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_details" />

    <TextView
        android:id="@+id/countryInfoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/country_info"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/latitudeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:text="@string/latitude"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/latitudeInfoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/latitude_info"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/longitudeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:text="@string/longitude"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/longitudeInfoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/longitude_info"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/windDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:text="@string/wind_probability"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/windInfoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/wind_probability_info"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/whenToGoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:text="@string/when_to_go"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/whenToGoInfoDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/when_to_go_info"
        android:textColor="#757575" />

    <Button
        android:id="@+id/mapsLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:text="@string/see_it_on_maps"
        android:textColor="@android:color/black" />

</LinearLayout>
</ScrollView>